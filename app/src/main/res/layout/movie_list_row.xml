<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/spacing_xsmall"
    android:background="@drawable/card_back"
    android:clickable="true"
    android:id="@+id/movies_layout"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">


    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/layout_xxlarge"
        android:layout_height="@dimen/layout_xxlarge"
        android:layout_margin="@dimen/spacing_xsmall"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_icon"
        android:layout_marginLeft="@dimen/spacing_xsmall"
        android:textColor="@color/black"
        android:text="@string/dd_mm_yyyy" />

    <TextView
        android:id="@+id/text_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/layout_medium"
        android:layout_toLeftOf="@+id/image_next"
        android:layout_toRightOf="@+id/image_icon"
        android:text="@string/movie_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/text_adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/spacing_xsmall"
        android:textColor="@color/black"
        android:text=" " />

    <ImageView
        android:id="@+id/image_next"
        android:layout_width="@dimen/spacing_large"
        android:layout_height="@dimen/spacing_large"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_xsmall"
        android:layout_marginRight="@dimen/spacing_xsmall"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:src="@drawable/next_arrow" />

</RelativeLayout>